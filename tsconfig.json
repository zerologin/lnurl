{
  "compilerOptions": {                        
    "target": "esnext",                               
    "module": "commonjs",                           
    "outDir": "dist",                             
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true                      
  },
  "exclude":[
    "./node_modules",
    "./tests",
    "./bin"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}